{
  "name": "zesty-app-skeleton",
  "version": "1.0.0",
  "description": "Application skeleton for Zesty products",
  "repository": "https://github.com/zesty-io/app-skeleton",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "npm run test:unit:bundle && node_modules/.bin/tape test/unit/bundle.tmp.js | node_modules/.bin/faucet",
    "test:unit:bundle": "node_modules/.bin/browserify -t babelify test/unit/**/*.spec.js > test/unit/bundle.tmp.js",
    "test:integration": "npm run test:integration:bundle && node_modules/.bin/tape",
    "test:integration:bundle": "node_modules/.bin/browserify -t riotify test/**/*.js > build/test_bundle.js",
    "coverage": "node_modules/.bin/browserify -t [babelify coverify] tests/**/*.js | iojs | node_modules/.bin/coverify",
    "start": "./node_modules/.bin/gulp"
  },
  "author": "Stuart Runyan",
  "license": "ISC",
  "devDependencies": {
    "babel": "^5.8.21",
    "babelify": "^6.1.3",
    "browserify": "^11.0.0",
    "coverify": "^1.4.0",
    "faucet": "0.0.1",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-connect": "^2.2.0",
    "gulp-less": "^3.0.3",
    "gulp-load-plugins": "^0.10.0",
    "gulp-minify-css": "^1.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-riot": "^0.2.17",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "gulp-watch": "^4.3.3",
    "riotify": "^0.1.2",
    "standard": "^4.5.4",
    "tap": "^1.3.1",
    "tap-dot": "^1.0.0",
    "tape": "^4.0.1",
    "testling": "^1.7.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.3.0"
  },
  "dependencies": {
    "es6-promise": "^2.3.0",
    "grapnel": "^0.5.9",
    "moment": "^2.10.5",
    "riot": "^2.2.2",
    "whatwg-fetch": "^0.9.0"
  }
}
